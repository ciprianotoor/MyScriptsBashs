#!/bin/bash
# Script para enlazar .zshrc de cipriano a root

# Verificar que se ejecute como root
if [[ $EUID -ne 0 ]]; then
   echo "Por favor, ejecuta este script como root (sudo)." 
   exit 1
fi

# Rutas
SRC="/home/cipriano/.zshrc"
DST="/root/.zshrc"

# Hacer backup si .zshrc de root existe
if [[ -e "$DST" ]]; then
    echo "Haciendo backup de /root/.zshrc a /root/.zshrc.backup"
    mv "$DST" "${DST}.backup"
fi

# Crear el enlace simbólico
echo "Creando enlace simbólico: $DST -> $SRC"
ln -s "$SRC" "$DST"

echo "Listo. Ahora /root/.zshrc apunta a /home/cipriano/.zshrc"
